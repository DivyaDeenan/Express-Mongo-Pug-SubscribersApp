extends layout

block content
	h1 Edit Subscriber
	form(name='editsubscriber', method='post', action='/editsubscriber/'+id+'/Update?_method=PUT')
		div Email:
			input#inputEmail(type='text', placeholder='Add Email', name='email' value=email)
		div First Name:
			input#inputFirstName(type='text',placeholder='Add First Name', name='firstName' value=firstName)
		div Last Name:
			input#inputLastName(type='text',placeholder='Add Last Name', name='lastName' value=lastName)
		div
			input(type='hidden', name='id' value=id)
			button#btnSubmit(type='submit') Update