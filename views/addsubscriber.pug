extends layout

block content
	h1 Subscribe Now
	form(name='addsubscriber', method='post', action='/addsubscriber')
		div
			input#inputEmail(type='text', placeholder='Add Email', name='email')
		div
			input#inputFirstName(type='text',placeholder='Add First Name', name='firstName')
		div
			input#inputLastName(type='text',placeholder='Add Last Name', name='lastName')
		div
			button#btnSubmit(type='submit') Subscribe
	br
	a(href="/") Go Back